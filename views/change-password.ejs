<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password</title>
    
    <style>
      *{
        padding:0;
        margin: 0;
        box-sizing: border-box;
        color:white;
      }
      body{
        background: url('https://portal.csuniv.edu/OneWeb/Content/images/background.jpg');
        background-repeat: no-repeat;
        background-size: cover;
      }
      .resetpassword{
        /* height:1rem; */
        /* border:2px solid; */
        display:flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        /* background-image: linear-gradient(to right)); */
      }
      .container{
        background-color: rgba(0, 0, 0, 0.5);
        box-shadow: 0px 0px 20px 6px rgb(128 128 128 / 50%);
        border-radius: 10px;
      }
      .inner-divs{
        /* border:2px solid red; */
        padding:2rem;
        display: flex;
        justify-content: left;
        align-items: center;
      }
      .inputinner-divs input{
        font-size: 1.1rem;
        padding:0.6rem;
        border-radius: 4px;
        border:1px solid;
        background-color: transparent;
      }
      .inputinner-divs label{
        font-size: 1.4rem;
        font-weight: 900;
      }
      .btn{
        font-size: 1.1rem;
        background-color:rgb(12, 12, 60);
        color: white;
        padding:0.6rem;
        border-radius: 8px;
        border: 1px solid;
        cursor:pointer;

      }
      .btn:hover{
        opacity: .7;
        text-decoration: underline;
      }
    </style>
  </head>
  <script>  
    function verifyPassword() {  
      var pw = document.getElementById("password").value;  
      var pw2 = document.getElementById("password2").value; 
      console.log(pw, pw2) 

      if(pw == "") {  
         document.getElementById("message").innerHTML = "**Fill the password please!";  
         return false;  
      }  
  
      if(pw.length < 8) {  
         document.getElementById("message").innerHTML = "**Password length must be atleast 8 characters";  
         return false;   
        } else if (pw !== pw2) {  
        document.getElementById("message").innerHTML = "**Both Passwords must be Same";  
        return false;
      }  
    }  
    </script> 
  <body>
    <div class="resetpassword">
      <div class="container">
      <div class="inner-divs">

          <h1 style="text-decoration: underline;">Reset Password for <%= email %></h1>
        </div>
        <div id="message" style="padding-left:2rem; color:red;"></div>
        <form onsubmit ="return verifyPassword()" method="post" action="">
          <div class="inputinner-divs inner-divs">
            <label for="password"> Password: </label>
            <input style="margin-left: 1rem; width: 25.4rem;" type="password" name="password" id="password" required/>
          </div>
          <div class="inputinner-divs inner-divs">
            <label for="password2"> Confirm Password: </label>
            <input style="margin-left: 1rem; width: 20rem;" type="password" name="password2" id="password2" required/>
          </div>
          <div style="padding-top:1.5rem;padding-bottom:2.5rem;text-align: center;">
            <input class="btn" type="submit" value="Reset Password" >
          </div>
        </form>
      </div>
    </div>
    </body>
</html>
